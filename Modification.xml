<modification xmlns="http://www.simplemachines.org/xml/modification" xmlns:smf="http://www.simplemachines.org/">
	<id>sid2varun:liveclockinheader</id>
	<version>1.1</version>

	<file name="$themedir/index.template.php">
		<operation>
			<search position="replace"><![CDATA[echo '
					<li>', $context['current_time'], '</li>
				</ul>';]]></search>
			<add><![CDATA[if (!empty($modSettings['lc_mod_enable'])) {
			if(function_exists('LC_mainIndex')) {
				LC_mainIndex();
			}
			echo '
					<li id="live_clock">', $txt['lc_ajax_in_progress'],'</li>';

			if (!empty($modSettings['lc_show_timezone_dropdown'])) {
				echo '
					<select id="live_clock_timezone_options" onChange="liveClock.onTimezoneChange(this.value)"></select>';
			}

			echo '
				</ul>';	
		} else {
			echo '
					<li>', $context['current_time'], '</li>
				</ul>';
		}]]></add>
		</operation>
	</file>

	<file name="$themedir/css/index.css">
      <operation>
         <search position="end" />
         <add><![CDATA[

h3.catbg a.lc_admin_reset_button {
	background: #fff;
	color: #000;
	padding: 1px 6px;
	border-radius: 3px;
}]]></add>
      </operation>
   </file>
</modification>